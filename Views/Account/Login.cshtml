@model AreEyeP.Models.LoginViewModel

<div style="background-color: #3E3E3E; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div style="width: 60%; background-color: #FFFFFF; border-radius: 15px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); display: flex;">
        <div style="width: 60%; padding: 50px;">
            <h2 style="color: #01957D; font-weight: 600; margin-bottom: 10px;">Login to your Account</h2>
            <p style="color: #555; margin-bottom: 30px;">Enter your details to login</p>

            <form asp-action="Login" method="post">
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="Username" style="font-weight: 500;">Username</label>
                    <div style="position: relative;">
                        <input asp-for="Username" class="form-control" placeholder="Enter your Username" style="width: 100%; padding: 10px; padding-left: 40px; border-radius: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="Password" style="font-weight: 500;">Password</label>
                    <div style="position: relative;">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your Password" style="width: 100%; padding: 10px; padding-left: 40px; border-radius: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check" style="margin-bottom: 20px;">
                    <input asp-for="RememberMe" class="form-check-input" style="margin-right: 10px;" />
                    <label asp-for="RememberMe" class="form-check-label" style="font-weight: 500;">Remember me</label>
                </div>

                <button type="submit" class="btn btn-primary btn-block" style="width: 100%; padding: 10px; background-color: #01957D; border: none; color: #FFFFFF; border-radius: 5px; font-weight: 600; cursor: pointer;">LOGIN</button>
            </form>

            <p style="margin-top: 20px;">
                <a href="#" style="color: #01957D; text-decoration: none;">Forgot your Password?</a>
            </p>

            <p style="margin-top: 20px; text-align: center; font-size: 0.9rem;">
                Don't have an account? <a href="@Url.Action("Register", "Account")" style="color: #01957D; text-decoration: none;">Register here</a>
            </p>
        </div>

        <div style="width: 40%; background-color: #01957D; border-radius: 0px 15px 15px 0px; display: flex; justify-content: center; align-items: center; padding: 50px;">
            <div style="text-align: center;">
                <img src="~/images/logo.png" alt="Logo" style="width: 120px; margin-bottom: 20px;">
                <h3 style="color: #FFFFFF; font-weight: 600;">ARE EYE P</h3>
                <p style="color: #FFFFFF;">CEMETERY MANAGEMENT</p>
            </div>
        </div>
    </div>
</div>
